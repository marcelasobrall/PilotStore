@page
@model PilotStore_.Pages.CreateModel


<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Inclusão de Produto - PilotStore</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/4/pulse/bootstrap.min.css">
</head>
<body>

    <header class="bg-dark text-white mt-3">
        <div class="container text-center">
            <h1 class="py-3">Inclusão de Produto</h1>
        </div>
    </header>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Product.Name" class="control-label">Nome do produto</label>
                        <input asp-for="Product.Name" class="form-control" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Product.Description" class="control-label">Descrição</label>
                        <input asp-for="Product.Description" class="form-control" />
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Product.ImagePath" class="control-label">Caminho da Imagem do Produto:</label>
                        <input asp-for="Product.ImagePath" class="form-control" />
                        <span asp-validation-for="Product.ImagePath" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Product.Price" class="control-label">Preço</label>
                        <input asp-for="Product.Price" class="form-control" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Product.ReleaseDate" class="control-label">Data de lançamento</label>
                        <input asp-for="Product.ReleaseDate" class="form-control" />
                        <span asp-validation-for="Product.ReleaseDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Product.MarcaId" class="control-label"></label>

                        <select class="form-select"
                                asp-for="Product.MarcaId"
                                asp-items="Model.MarcaOptionItems">
                            <option value="">Selecione uma opção</option>
                        </select>

                        <span asp-validation-for="Product.MarcaId" class="text-danger">
                        </span>
                    </div>


                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>

</body>
</html>