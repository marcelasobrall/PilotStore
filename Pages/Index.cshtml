@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - PilotStore</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/4/pulse/bootstrap.min.css">
</head>

<body>
    <header class="bg-dark text-white mt-3">
        <div class="container text-center">
            <h1 class="py-3">PilotStore</h1>
        </div>
    </header>

    <main class="container my-4">
        <div class="container mt-5">

            @if (TempData["TempMensagemSucesso"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Sucesso!</h4>
                    Operação realizada com sucesso!
                </div>
            }

            <div class="row justify-content-md-center">

                @foreach (var item in Model.ListaProduct)
                {
                    <div class="card col-3 m-3">
                        <img src="@item.ImagePath" class="card-img-top" alt="@item.Name" style="border-radius: 25px">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <a class="btn btn-primary"
                               asp-page="/Details"
                               asp-route-id="@item.Id"
                               asp-route-slug="@item.GenerateSlug()">Ver mais</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </main>

    <footer class="bg-dark text-white text-center py-3">
        <div class="container">
            <p>&copy; PilotStore - Todos os direitos reservados.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
    <!-- Adicione outros scripts aqui, se necessário -->
</body>

</html>