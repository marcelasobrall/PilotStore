@page
@model PilotStore_.Pages.Marcas.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Lista de Marcas</h1>

    <p>
        <a asp-page="Create" class="btn btn-primary">Criar Nova</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Descrição
                </th>
                <th>
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Marca)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.MarcaId" class="btn btn-warning">Editar</a>
                        <a asp-page="./Details" asp-route-id="@item.MarcaId" class="btn btn-info">Detalhes</a>
                        <a asp-page="./Delete" asp-route-id="@item.MarcaId" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
