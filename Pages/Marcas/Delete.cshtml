@page
@model PilotStore_.Pages.Marcas.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Excluir</h1>

    <h3>Tem certeza de que deseja excluir isto?</h3>

    <div>
        <h4>Marca</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Marca.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Marca.Descricao)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Marca.MarcaId" />

            <div class="form-group">
                <input type="submit" value="Excluir" class="btn btn-danger" /> |
                <a asp-page="./Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>
